<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jacky.connectiontester.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Connection Tester"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:baselineAligned="false">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TCP"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="UDP"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tcpAddrEt"
                android:hint="Target Address"
                android:textSize="20dp"
                android:text="54.255.207.187"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/udpAddrEt"
                android:hint="Target Address"
                android:textSize="20dp"
                android:text="54.255.207.187"
                android:layout_weight="1"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tcpPortEt"
                android:hint="Target Port"
                android:textSize="20dp"
                android:text="47305"
                android:layout_below="@+id/tcpAddrEt"
                android:layout_toLeftOf="@+id/udpAddrEt"
                android:layout_weight="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/udpPortEt"
                android:hint="Target Port"
                android:textSize="20dp"
                android:text="47309"
                android:layout_alignBottom="@+id/tcpPortEt"
                android:layout_toEndOf="@+id/responseTv"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TCP Connection"
                android:id="@+id/tcpConnBtn"
                android:layout_below="@+id/tcpPortEt"
                android:layout_toStartOf="@+id/udpConnBtn"
                android:layout_weight="1"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="UDP Connection"
                android:id="@+id/udpConnBtn"
                android:layout_weight="1"
                android:layout_marginTop="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/responseTv"

                android:layout_column="0"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="Response"
                android:textAlignment="center"
                android:layout_marginTop="50dp" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
